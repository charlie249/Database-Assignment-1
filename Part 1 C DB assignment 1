SELECT seller_account_ref, s.seller_name, pr.product_code, pr.product_description, COUNT(op.order_id) AS 'Number of Orders', SUM(quantity)AS 'Total Quantity Sold', 'Â£' || ROUND(COUNT(quantity)*price,2) AS 'Total Value Of All Sales'
FROM sellers s
        INNER JOIN products pr ON op.product_id = pr.product_id
        INNER JOIN ordered_products op ON s.seller_id = op.seller_id                      
        INNER JOIN shopper_orders so ON op.order_id = so.order_id
        
WHERE order_date > 01/01/19    
GROUP BY s.seller_name, pr.product_description