SELECT s.shopper_id, s.shopper_first_name, s.shopper_surname, s.shopper_account_ref, op.order_id, 'Â£' || ROUND(price,2) AS 'price', ordered_product_status, quantity, seller_name, pr.product_description, STRFTIME('%d-%m-%Y',order_date)AS "Order Date"
FROM shoppers s
    INNER JOIN ordered_products op ON ordered_product_status = op.ordered_product_status
                             AND price = op.price
                             AND quantity = op.quantity
    INNER JOIN sellers se ON seller_name = se.seller_name
    INNER JOIN products pr ON product_description = pr.product_description
    INNER JOIN shopper_orders so ON order_date = so.order_date
                             AND op.order_id = so.order_id 
WHERE s.shopper_account_ref = @id
ORDER BY order_date DESC;

